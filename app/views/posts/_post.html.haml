.post
  .post__title
    = post.title
    .post__edit
      - if post.user_id.present?
        - if user_signed_in? && post.user.id == current_user.id
          = link_to 'edit', "posts/#{post.id}/edit"
          = link_to 'delete', "posts/#{post.id}", method: :delete, data: {confirm: "削除しますか？"}
  .post__text
    = simple_format(post.text)
  .post__date
    = post.user.name if post.user_id.present?
    = post.created_at.strftime("%Y/%m/%d %H:%M") if post.created_at.present?
